<div class="container">
  <div class="modal-header">
    <h3>Family Pedigree</h3>
  </div>
  <div class="well">

    <ul class="nav nav-tabs">
      <li><%= link_to "Sign in", new_session_path(resource_name) %></li>
      <li><%= link_to "Sign up", memberships_path %></li>
      <li  class="active"><%= link_to "Forgot your password?", new_password_path(resource_name) %></li>
    </ul>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class =>"form-horizontal"}) do |f| %>
  		<%= devise_error_messages! %>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true ,:class=>"form-control" ,:id=>"inputEmail3" ,:placeholder=>"Email"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Send me reset password instructions" ,:class=>"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
